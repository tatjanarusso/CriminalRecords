<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import com.example.criminal_records.util.CheckBoxCellFactory?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.criminal_records.CrimeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <left>

        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Text text="Search for criminals:"
                  GridPane.columnIndex="0" GridPane.rowIndex="0"
                  GridPane.columnSpan="2"/>

            <Label text="Forename:"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"/>

            <TextField fx:id="forename"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Surname:"
                   GridPane.columnIndex="0" GridPane.rowIndex="2"/>

            <TextField fx:id="surname"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <HBox spacing="10" alignment="bottom_right"
                  GridPane.columnIndex="1" GridPane.rowIndex="10">
                <Button text="Search" onAction="#onSearchClick" fx:id="searchButton"/>
            </HBox>
            <fx:define>
                <ToggleGroup fx:id="group" />
            </fx:define>
        </GridPane>

    </left>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets
                        top="10"
                        right="10"
                        left="10"
                        bottom="10"
                />
            </padding>
            <TableView fx:id="tableView" GridPane.columnIndex="0"
                       GridPane.rowIndex="1"
                       editable="true"
                       VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="Select" prefWidth="100" fx:id="selected">
                        <cellValueFactory><PropertyValueFactory property="selected" />
                        </cellValueFactory>
                        <cellFactory><CheckBoxCellFactory /></cellFactory>
                    </TableColumn>
                    <TableColumn text="Forename" prefWidth="150" fx:id="forenameCell">
                        <cellValueFactory><PropertyValueFactory property="forenameCell" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Surname" prefWidth="150" fx:id="surnameCell">
                        <cellValueFactory><PropertyValueFactory property="surnameCell" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Age" prefWidth="100" fx:id="ageCell">
                        <cellValueFactory><PropertyValueFactory property="ageCell" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Height" prefWidth="100" fx:id="heightCell">
                        <cellValueFactory><PropertyValueFactory property="heightCell" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Weight" prefWidth="100" fx:id="weightCell">
                        <cellValueFactory><PropertyValueFactory property="weightCell" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Committed Crime/s" prefWidth="300">
                        <cellValueFactory><PropertyValueFactory property="comCrime" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <HBox spacing="10" GridPane.columnIndex="0"
                  GridPane.rowIndex="2">
                <Button text="Clear" onAction="#onClearClick" fx:id="clearButton"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
